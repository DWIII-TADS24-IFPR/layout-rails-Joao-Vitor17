<% content_for :title, "Posts" %>

<%# Notificação (flash message) %>
<% if notice.present? %>
  <div class="mb-6 p-4 bg-green-100 text-green-800 border border-green-300 rounded">
    <%= notice %>
  </div>
<% end %>

<div class="container mx-auto px-4">
  <h1 class="text-4xl font-extrabold text-gray-900 mb-8">Posts</h1>

  <div id="posts" class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
    <% @posts.each do |post| %>
      <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg border border-gray-200 transition-shadow">
        <%= render post %>
        <div class="mt-4">
          <%= link_to "Show this post", post, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="mt-10 flex flex-col sm:flex-row items-center justify-between gap-4">
    <%= link_to "Comments", comments_path, class: "text-blue-600 hover:text-blue-800 text-lg font-medium" %>

    <%= link_to "New post", new_post_path, class: "inline-block px-5 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors font-semibold" %>
  </div>
</div>
