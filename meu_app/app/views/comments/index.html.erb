<% content_for :title, "Comments" %>

<%# Exibição de Notificação (flash message) %>
<% if notice.present? %>
  <div class="mb-6 p-4 bg-green-100 text-green-800 border border-green-300 rounded">
    <%= notice %>
  </div>
<% end %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-extrabold text-gray-900 mb-8">Comments</h1>

  <div id="comments" class="grid gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3">
    <% @comments.each do |comment| %>
      <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg border border-gray-200 transition-shadow">
        <%= render comment %>
        <div class="mt-4">
          <%= link_to "Show this comment", comment, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-10 flex flex-col sm:flex-row items-center justify-between gap-4">
    <%= link_to "Posts", posts_path, class: "text-blue-600 hover:text-blue-800 text-lg font-medium" %>

    <%= link_to "New comment", new_comment_path, class: "inline-block px-5 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors font-semibold" %>
  </div>
</div>
