<% content_for :title, "Editing comment" %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-extrabold text-gray-900 mb-8">Editing comment</h1>

  <%= render "form", comment: @comment %>

  <div class="mt-6 flex flex-col sm:flex-row gap-4 sm:items-center">
    <%= link_to "Show this comment", @comment, class: "text-blue-600 hover:text-blue-800 text-lg font-semibold" %>
    <%= link_to "Back to comments", comments_path, class: "text-gray-600 hover:text-gray-800 text-lg font-medium" %>
  </div>
</div>
