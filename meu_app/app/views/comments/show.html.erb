<%# Exibição de Notificação (flash message) %>
<% if notice.present? %>
  <div class="mb-6 p-4 bg-green-100 text-green-800 border border-green-300 rounded">
    <%= notice %>
  </div>
<% end %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-extrabold text-gray-900 mb-8">Detalhes do Comentário</h1>

  <div class="bg-white p-6 rounded-lg shadow-lg border border-gray-200">
    <%= render @comment %>
    
    <div class="mt-6 flex justify-between items-center">
      <%= link_to "Edit this comment", edit_comment_path(@comment), class: "text-blue-600 hover:text-blue-800 font-semibold" %>
      <%= link_to "Back to comments", comments_path, class: "text-gray-600 hover:text-gray-800 font-medium" %>
    </div>

    <div class="mt-6">
      <%= button_to "Destroy this comment", @comment, method: :delete, class: "py-2 bg-red-600 rounded hover:bg-red-700 transition-colors font-semibold" %>
    </div>
  </div>
</div>
